[server]
host = <%= scope.lookupvar('pulp::admin::server_host') %>
port = <%= scope.lookupvar('pulp::admin::server_port') %>
api_prefix = /pulp/api
verify_ssl = <%= scope.lookupvar('pulp::admin::admin_verify_ssl') %>
ca_path = <%= scope.lookupvar('pulp::admin::admin_ca_path') %>
upload_chunk_size = 1048576


[client]
role = admin


[filesystem]
extensions_dir = /usr/lib/pulp/admin/extensions
id_cert_dir = ~/.pulp
id_cert_filename = user-cert.pem
upload_working_dir = ~/.pulp/uploads


[logging]
filename = ~/.pulp/admin.log
call_log_filename = ~/.pulp/server_calls.log


[output]
poll_frequency_in_seconds = 1
enable_color = true
wrap_to_terminal = false
wrap_width = 80
